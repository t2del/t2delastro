---
const { title = 'Welcome, world!', slug, classContainer = '', classText = '', imgsrc = '' } = Astro.props;

---

<!-- Store the message prop as a data attribute. -->
<astro-greet data-message={title} data-slug={slug}>
  <button class={`btn-modal ${classContainer}`} id={`btn-modal-${slug}`}>
    <div class="modal-container">
      <img  src={imgsrc} alt={title}  title={title} class="" />
      <h4 class={`title ${classText}`}>{title}</h4>
    </div>
      
  </button>
</astro-greet>



<script>
  class AstroGreet extends HTMLElement {
    constructor() {
      super();

      // Read the message from the data attribute.
      const title = this.dataset.title;
      const slug = this.dataset.slug;
      const button = this.querySelector('button');

        // Get the modal
        var modal = document.getElementById(slug);
        
        button.addEventListener('click', () => {
            modal.classList.add("modal-show");
        });
        // Add a click event listener to the window when the modal is active, add close modal action
        window.addEventListener('click', function(event) {
            if (event.target.id) {  
                event.target.classList.remove('modal-show');
            }
        });
    }
  }
  customElements.define('astro-greet', AstroGreet);
</script>

<style>
  .btn-modal {
    text-align: left;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
    width: 100%;
    border-radius: 10px;
    overflow: hidden;
    border: none;
    box-shadow: 1px 1px 5px 1px #00000080;
    cursor: pointer;
  }
  .btn-modal.modal-show {
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0 0 0 / 57%);
    opacity: 0;
    transition: opacity 300ms ease-in;
  }
  .btn-modal img {
    /* aspect-ratio: 8 / 4; */
    width: 100%;
    height: 150px;
    object-fit: cover;
  }
  .btn-modal h4 {
    display: inline;
    margin: 10px;
    font-size: var(--font-size-sm);
  }

  
</style>