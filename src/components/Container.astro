---
const { narrow, className } = Astro.props;

interface Props {
  className: string;
}
---

<div class={`content__container ${narrow ? 'content__container--narrow' : ''} ${className}`}>
  <slot></slot>
</div>

<style>
  .content__container {
    margin: 0 auto;
    max-width: var(--container-max-width);
    padding: var(--container-padding);
  }
  .content__container--narrow {
    max-width: var(--container-max-width-narrow);
  }
</style>