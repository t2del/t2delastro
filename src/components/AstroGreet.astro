---
const { message = 'Welcome, world!', slug, className, title } = Astro.props;
---

<!-- Store the message prop as a data attribute. -->
<astro-greet data-message={message} data-slug={slug}>
  <button class={`some-class ${className}`}>{title}</button>
</astro-greet>



<script>
  class AstroGreet extends HTMLElement {
    constructor() {
      super();

      // Read the message from the data attribute.
      const message = this.dataset.message;
      const slug = this.dataset.slug;
      const button = this.querySelector('button');

        // Get the modal
        var modal = document.getElementById(slug);
        
        button.addEventListener('click', () => {
            modal.classList.add("show");
        });
        // Add a click event listener to the window when the modal is active, add close modal action
        window.addEventListener('click', function(event) {
            if (event.target.id) {  
                event.target.classList.remove('show');
            }
        });
    }
  }
  customElements.define('astro-greet', AstroGreet);
</script>

