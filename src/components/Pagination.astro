---
// component imports
import Link from "./Link.astro";

const { prevUrl , nextUrl } = Astro.props;

---

<nav aria-label="Blog pages" class="pagination-blog">
  {
    prevUrl && (
      <Link
        text="Previous"
        href={`/t2delastro${prevUrl}/`}
        style="primary prev"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-left-line",
          side: "left",
        }}
      />
    )
  }
  {
    nextUrl && (
      <Link
        text="Next"
        href={`/t2delastro${nextUrl}/`}
        style="primary next"
        borderVisible={true}
        isFilled={false}
        icon={{
          name: "tabler:arrow-big-right-line",
          side: "right",
        }}
      />
    )
  }
</nav>